{
  "name": "juliangut/sessionware",
  "description": "PSR7 compatible session management",
  "keywords": [
    "psr7",
    "session",
    "middleware"
  ],
  "homepage": "https://github.com/juliangut/sessionware",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Julián Gutiérrez",
      "email": "juliangut@gmail.com",
      "homepage": "http://www.juliangut.com",
      "role": "Developer"
    }
  ],
  "support": {
    "source": "https://github.com/juliangut/sessionware",
    "issues": "https://github.com/juliangut/sessionware/issues"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=7.0",
    "league/event": "^2.1",
    "psr/http-message": "^1.0"
  },
  "require-dev": {
    "defuse/php-encryption": "^2.0",
    "friendsofphp/php-cs-fixer": "^1.12",
    "humbug/humbug": "~1.0@dev",
    "phpmd/phpmd": "^2.0",
    "phpstan/phpstan": "~0.5",
    "phpunit/phpunit": "^5.7|6.0",
    "predis/predis": "^1.1",
    "sebastian/phpcpd": "^2.0",
    "squizlabs/php_codesniffer": "^2.0",
    "zendframework/zend-diactoros": "^1.3"
  },
  "suggest": {
    "defuse/php-encryption": "Encryption/decryption of session data"
  },
  "autoload": {
    "psr-4": {
      "Jgut\\Sessionware\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jgut\\Sessionware\\Tests\\": "tests/Sessionware/"
    }
  },
  "bin": [
  ],
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "phplint": "php -l src && php -l tests",
    "phpcs": "phpcs --standard=PSR2 src tests",
    "phpcs-lint": "php-cs-fixer fix --dry-run --verbose",
    "phpcpd": "phpcpd src",
    "phpstan": "phpstan analyse --level 1 src tests",
    "phpmd": "phpmd src text unusedcode,naming,design,controversial,codesize",
    "phpunit": "phpunit",
    "phpunit-coverage": "phpunit --coverage-html build/coverage",
    "phpunit-clover": "phpunit --coverage-clover build/logs/clover.xml",
    "humbug": "humbug",
    "qa": [
      "@phplint",
      "@phpcs",
      "@phpcs-lint",
      "@phpcpd",
      "@phpstan",
      "@phpmd"
    ],
    "fix": "php-cs-fixer fix --verbose",
    "security": "composer outdated",
    "test": [
      "@qa",
      "@phpunit",
      "@humbug"
    ]
  }
}
